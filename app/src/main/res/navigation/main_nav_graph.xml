<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_nav_graph"
    app:startDestination="@id/home_fragment_item">
    <fragment
        android:id="@+id/home_fragment_item"
        android:name="it.units.sim.bookmarkhub.ui.core.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/add_bookmark_fragment_item"
        android:name="it.units.sim.bookmarkhub.ui.core.AddBookmarkFragment"
        android:label="fragment_add_bookmark"
        tools:layout="@layout/fragment_add_bookmark">
        <action
            android:id="@+id/action_addBookmarkFragment_to_homeFragment"
            app:destination="@id/home_fragment_item" />
    </fragment>
    <fragment
        android:id="@+id/add_category_fragment_item"
        android:name="it.units.sim.bookmarkhub.ui.core.AddCategoryFragment"
        android:label="fragment_add_category"
        tools:layout="@layout/fragment_add_category">
        <action
            android:id="@+id/action_addCategoryFragment_to_homeFragment"
            app:destination="@id/home_fragment_item" />
    </fragment>
    <fragment
        android:id="@+id/settings_fragment"
        android:name="it.units.sim.bookmarkhub.ui.core.SettingsFragment"
        android:label="fragment_setting"
        tools:layout="@layout/fragment_settings" />
</navigation>